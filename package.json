{
    "name": "noteshub-server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "better-npm-run start-dev",
        "start": "better-npm-run start-prod",
        "test": "better-npm-run test",
        "prettier": "prettier-eslint --write \"**/*.{js,json,css}\"",
        "test:watch": "npm run test -- --watch --onlyChanged"
    },
    "betterScripts": {
        "start-dev": {
            "command": "nodemon src/server.js --exec babel-node --watch src",
            "env": {
                "NODE_ENV": "development",
                "MONGO_URL": "mongodb://127.0.0.1:27017/noteshub-dev",
                "PORT": 3000
            }
        },
        "start-prod": {
            "command": "babel-node src/server.js",
            "env": {
                "NODE_ENV": "production",
                "MONGO_URL": "mongodb://127.0.0.1:27017/noteshub",
                "PORT": 23000
            }
        },
        "test": {
            "command": "jest --runInBand --verbose false --config ./src/test/jest.config.js",
            "env": {
                "NODE_ENV": "test"
            }
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "{src}/**/*.{js,json,css}": [
            "prettier-eslint --write",
            "git add"
        ],
        "{src}/**/*.js": "eslint --max-warnings 0"
    },
    "dependencies": {
        "@babel/core": "^7.1.6",
        "@babel/node": "^7.0.0",
        "@babel/plugin-transform-runtime": "^7.1.0",
        "@babel/preset-env": "^7.1.6",
        "@babel/runtime": "^7.1.5",
        "bcryptjs": "^2.4.3",
        "better-npm-run": "^0.1.1",
        "bluebird": "^3.5.3",
        "body-parser": "^1.18.3",
        "cors": "^2.8.5",
        "dayjs": "^1.7.7",
        "diff-match-patch": "^1.0.4",
        "errorhandler": "^1.5.0",
        "express": "^4.16.4",
        "express-session": "^1.15.6",
        "express-validator": "^5.3.0",
        "jsonwebtoken": "^8.4.0",
        "lodash": "^4.17.11",
        "mongoose": "^5.3.13",
        "mongoose-unique-validator": "^2.0.2",
        "morgan": "^1.9.1",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "eslint": "^5.9.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-plugin-import": "^2.14.0",
        "husky": "^1.2.0",
        "jest": "^23.6.0",
        "jest-config": "^23.6.0",
        "jest-environment-node": "^23.4.0",
        "lint-staged": "^8.1.0",
        "mongodb-memory-server": "^2.7.3",
        "prettier-eslint": "^8.8.2",
        "prettier-eslint-cli": "^4.7.1",
        "supertest": "^3.3.0"
    }
}
